{
  "builders": [
    {
      "type": "docker",
      "image": "nginx",
      "commit": "true"	    
     }
   ],
   
   "provisioners": [
    {
      "type": "file",
      "source": "app/index.html",
      "destination": "/usr/share/nginx/html/index.html"
     }
  ],

   "post-processors": [
	{
	  "type": "docker-tag",
	  "repository": "nginx-packer",		
	  "tag": "v1"
	}
  ]	
}

